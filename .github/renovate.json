{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended", "schedule:earlyMondays"],
    "branchPrefix": "renovate-",
    "packageRules": [
        {
            "automerge": true,
            "groupName": "Patch & Minor Updates",
            "groupSlug": "all-minor-patch-updates",
            "matchUpdateTypes": ["minor", "patch"],
            "schedule": "* 0-6 1 * *",
            "minimumReleaseAge": "5 days",
            "matchPackageNames": ["*"]
        },
        {
            "groupName": "Major Updates",
            "groupSlug": "all-major-updates",
            "matchUpdateTypes": ["major"],
            "matchPackageNames": ["*"]
        }
    ],
    "vulnerabilityAlerts": {
        "groupName": "Vulnerability Patches",
        "schedule": ["after 6am and before 7am every weekday"],
        "dependencyDashboardApproval": false,
        "minimumReleaseAge": null,
        "rangeStrategy": "update-lockfile",
        "commitMessagePrefix": "[SECURITY]",
        "branchTopic": "{{{datasource}}}-{{{depName}}}-vulnerability",
        "prCreation": "immediate"
    },
    "ignoreDeps": ["anothrNick/github-tag-action"]
}
